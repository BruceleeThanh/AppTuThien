<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_moi_tai_tro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.vuduc.apptuthien.MoiTaiTroActivity">

    <TextView
        android:id="@+id/txtDanhSachDiemNong"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Mời tài trợ"
        android:gravity="center"
        android:textSize="22sp"
        android:background="@android:color/darker_gray"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:text="Nhập thông tin liên hệ tài trợ: "
        android:textSize="18sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/edit_MoiTaiTro" />

    <Button
        android:id="@+id/btn_CapNhat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large"
        android:text="Cập nhật"/>
</LinearLayout>