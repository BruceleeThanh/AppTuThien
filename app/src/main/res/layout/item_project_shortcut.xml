<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cvProject"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_medium"
    android:layout_marginLeft="@dimen/margin_small"
    android:layout_marginRight="@dimen/margin_small"
    android:background="@color/white"
    android:elevation="@dimen/margin_medium">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivProjectImage"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/vidu_project1"/>

        <TextView
            android:id="@+id/tvProjectName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_toRightOf="@+id/ivProjectImage"
            android:text="Dự án từ thiện"
            android:textSize="@dimen/txt_large"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtProjectDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvProjectName"
            android:layout_below="@+id/tvProjectName"
            android:layout_marginTop="@dimen/margin_medium"
            android:text="Nếu bạn là một người đam mê nhiếp ảnh và mong muốn cống hiến một phần"
            android:textSize="@dimen/txt_medium"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>