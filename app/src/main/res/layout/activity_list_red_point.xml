<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_list_project"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vuduc.apptuthien.ListRedPointActivity">

    <TextView
        android:id="@+id/txtDanhSachDiemNong"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Danh sách điểm nóng"
        android:gravity="center"
        android:textSize="22sp"
        android:background="@android:color/darker_gray"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvListRedPoint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDanhSachDiemNong"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
